@model EasyHesapOnlineTicariOtomasyon.Models.Classes.Cariler



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>EasyHesap Online Ticari Otomasyon Cari Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
            {
               <table class="table table-hover">
                   <tr>
                       <td><label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label></td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Cari Adı</label>
                           @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
                       </td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Cari Soyad</label>
                           @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
                       </td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Mail Adresi</label>
                           @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
                       </td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Telefon</label>
                           @Html.TextBoxFor(x => x.CariTelefon, new { @class = "form-control" })
                       </td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Cari Adres</label>
                           @Html.TextBoxFor(x => x.CariAdres, new { @class = "form-control" })
                       </td>
                   </tr>
                   <tr>
                       <td>
                           <label for="">Şifre</label>
                           @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })
                       </td>
                   </tr>
               </table>
               <button class="btn btn-warning">Bilgileri Güncelle</button>
            }