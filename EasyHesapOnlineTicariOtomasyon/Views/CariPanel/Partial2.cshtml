@using EasyHesapOnlineTicariOtomasyon.Models.Classes
@model List<Mesajlar>

@foreach (var x in Model)
{
<div class="timeline timeline-inverse">
    <!-- timeline time label -->
    <div class="time-label">
        <span class="bg-warning">
          @x.Tarih.ToShortDateString()
        </span>
    </div>
    <!-- /.timeline-label -->
    <!-- timeline item -->
    <div>
        <i class="fas fa-envelope bg-primary"></i>
        <div class="timeline-item">
            <span class="time"><i class="far fa-clock"></i>@x.Tarih.TimeOfDay</span>
            <h3 class="timeline-header"><a href="#">@x.Konu</a></h3>
            <div class="timeline-body">
             @x.İcerik
            </div>
        </div>
    </div>
    <!-- END timeline item -->
    <!-- timeline item -->
    <!-- END timeline item -->
    <!-- timeline item -->
    <!-- END timeline item -->
</div>
}