@using EasyHesapOnlineTicariOtomasyon.Models.Classes
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Listesi</h2>
<br />
<table class="table table-hover" id="tbl1" style="margin-top:20px" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Seri & Sıra No</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Toplam</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
            <th>Yeni Kalem</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FaturaSerino @k.FaturaSirano</td>
            <td>@k.Tarih</td>
            <td>@k.Saat</td>
            <td>@k.Toplam ₺</td>
            <td><a href="/Departman/DepartmanGetir/@k.Faturaid" class="btn btn-outline-danger" onclick="silUyari()">Sil</a></td>
            <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-outline-warning">Detaylar</a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-outline-primary">Yeni Kalem</a></td>
        </tr>
    }

</table>
<br />
<a href="/Fatura/FaturaEkle/" class="btn btn-danger">Yeni Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#Modal1">Pop-up Liste</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Pop-Up Fatura Liste</h2>
                <button type="button" class="btn btn-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Toplam</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSerino</td>
                            <td>@x.FaturaSirano</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable();
    });

    function silUyari() {
        alert("Fatura Sistemden Silindi");
    }
</script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
