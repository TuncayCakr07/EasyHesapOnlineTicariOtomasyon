@using EasyHesapOnlineTicariOtomasyon.Models.Classes
@model List<Cariler>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cari Bilgileri Grafiği</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cari Ad-Soyad</th>
                            <th>Cari Ünvan</th>
                            <th>Şehir</th>
                            <th>Mail Adresi</th>
                            <th>Telefon</th>
                            <th>Adres</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                        <tr>
                            <td>@x.Cariid</td>
                            <td>@x.CariAd @x.CariSoyad</td>
                            <td>@x.CariUnvan</td>
                            <td>@x.CariSehir</td>
                            <td>@x.CariMail</td>
                            <td>@x.CariTelefon</td>
                            <td>@x.CariAdres</td>
                            <td>@x.Durum</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
