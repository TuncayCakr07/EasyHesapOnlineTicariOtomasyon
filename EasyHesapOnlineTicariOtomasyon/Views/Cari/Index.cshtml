@using EasyHesapOnlineTicariOtomasyon.Models.Classes
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Cari Hesaplar Listesi</h2>
<br />
<table class="table table-hover" id="tbl1" style="margin-top:20px" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Cari ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Unvan</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariUnvan</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td>@x.CariTelefon</td>
            <td>@x.CariAdres</td>
            <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-outline-danger" onclick="silUyari()">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.Cariid" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.Cariid" class="btn btn-outline-warning">Detaylar</a></td>
        </tr>
    }
</table>
<br />
<a href="/Cari/YeniCari/" class="btn btn-success">Yeni Cari Ekle</a>
<script>
    function ekleUyari() {
        alert("Cari Sisteme Kaydedildi!");

        var message = "@TempData["KategoriEkleMesaj"]";
        TempData.Remove("KategoriEkleMesaj");

        if (message !== "") {
            $("#popupMessage p").text(message);
            $("#popupMessage").removeClass("hidden");
        }
    }


     function guncelleUyari() {
        alert("Cari Güncellendi");

        var message = "@TempData["KategoriGuncelleMesaj"]";
        TempData.Remove("KategoriGuncelleMesaj");

        if (message !== "") {
            $("#popupMessage p").text(message);
            $("#popupMessage").removeClass("hidden");
        }
      }

    function silUyari() {
        alert("Cari Sistemden Silindi");

        var message = "@TempData["KategoriSilMesaj"]";
        TempData.Remove("KategoriSilMesaj");

        if (message !== "") {
            $("#popupMessage p").text(message);
            $("#popupMessage").removeClass("hidden");
        }
    }
</script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>





<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $(document).ready(function () {
        $('#tbl1').DataTable();
    });

</script>